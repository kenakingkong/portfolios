{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@nuxtjs/axios",
      "@nuxtjs/auth-next",
      "@types/express",
      "@types/jest",
      "@types/node",
      "@types/supertest",
      "@nuxt/types",
    ],
    "typeRoots": [
      "./types"
    ],
  },
  "include": [
    "src/**/*", 
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]               
}
